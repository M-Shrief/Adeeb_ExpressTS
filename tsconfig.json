{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "src",
    "sourceMap": true,
    // delete dist, tsconfig.tsbuildinfo to force re-building all files./s
    "incremental": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"]
  },
  "include": ["src"],
  "exclude": ["src/tests", "src/components/*/*.*.spec.ts", "./*.ts"]
}
